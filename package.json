{
  "name": "xmtp-agents",
  "private": true,
  "type": "module",
  "workspaces": [
    "templates/*",
    "packages/*",
    "recipes/*",
    "shared/*"
  ],
  "scripts": {
    "build": "yarn build:agent-starter && yarn build:recipes",
    "build:agent-starter": "turbo run build --filter=./packages/agent-starter --force",
    "build:recipes": "turbo run build --filter='./recipes/*'",
    "changeset": " changeset add --type patch",
    "clean": "turbo run clean && yarn cache clean && find recipes -name '.data' -type d -exec rm -rf {} +",
    "format": "turbo run format",
    "publish": "changeset publish",
    "recipes": "node scripts/recipes.js",
    "test": "FORCE_COLOR=1 turbo run test --force --concurrency=1",
    "test:agent-starter": "cd packages/agent-starter/tests && yarn test",
    "test:resolver": "cd packages/resolver/tests && yarn test",
    "typecheck": "FORCE_COLOR=1 turbo run typecheck"
  },
  "resolutions": {
    "viem": "^2.16.3"
  },
  "dependencies": {
    "@changesets/changelog-git": "^0.2.0",
    "@changesets/cli": "^2.27.5",
    "@clack/prompts": "^0.9.1",
    "punycode": "^2.3.1",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "prettier": "^3.3.1",
    "prettier-plugin-packagejson": "^2.5.0",
    "turbo": "^1.13.4",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@4.5.1",
  "engines": {
    "node": ">=20"
  }
}
